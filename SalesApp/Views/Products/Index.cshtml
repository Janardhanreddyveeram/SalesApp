@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Products" asp-action="Create">
                <i class="bi bi-plus-circle-fill"></i>&nbsp;&nbsp;Create New Product
            </a>
        </div>
    </div>

    <br />
    <br />
    <table class="table table-borderd table-striped" style="width:100%" id="tblData">
        <thead>
            <tr>
                <th>
                    Brand
                </th>
                <th>
                    ModelName
                </th>
                <th>
                    Description
                </th>
                <th>
                    ReceivingPrice
                </th>
                <th>
                    Price
                </th>
                <th>
                    CreatedDateTime
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td style="width:50%">@p.Brand</td>
                    <td style="width:50%">@p.ModelName</td>
                    <td style="width:50%">@p.Description</td>
                    <td style="width:50%">@p.ReceivingPrice</td>
                    <td style="width:50%">@p.Price</td>
                    <td style="width:50%">@p.CreatedDateTime</td>                    
                    <td>
                        <div class="W-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Products" asp-route-id="@p.Id">
                                <i class="bi bi-pencil-square"></i>&nbsp;&nbsp;Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="W-75 btn-group" role="group">
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Products" asp-route-id="@p.Id">
                                <i class="bi bi-trash3-fill"></i>&nbsp;&nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>