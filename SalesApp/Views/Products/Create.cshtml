@model ProductModel
@{
    ViewData["Title"] = "Create";
}

<from method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Brand"></label>
            <input asp-for="Brand" class="from-control">
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="ModelName"></label>
                <input asp-for="ModelName" class="from-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>

        <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="from-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="ReceivingPrice"></label>
                <input asp-for="ReceivingPrice" class="from-control" />
                <span asp-validation-for="ReceivingPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="from-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="CreatedDateTime"></label>
                <input asp-for="CreatedDateTime" class="from-control" />
                <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
        </div>

        
