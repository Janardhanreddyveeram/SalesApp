@model ProductModel
@{
    ViewData["Title"] = "Delete";
}

<from method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Brand"></label>
            <input asp-for="Brand" class="from-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="from-control" disabled />
        </div>
        <button class="btn btn-danger" style="width:150px">Delete</button>
        &nbsp;&nbsp;
        <a asp-action="Index" asp-controller="products" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</from>